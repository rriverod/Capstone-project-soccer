<div>
  <div>
    <h2>
      Add a new league
    </h2>

    <form action="/insert_league" method="post">
      <div>
        <label for="league_id_box">
          League
        </label>

        <input type="text" id="league_id_box" name="query_league_id">
      </div>

      <div>
        <label for="league_name_box">
          League name
        </label>

        <input type="text" id="league_name_box" name="query_league_name">
      </div>

      <div>
        <label for="start_date_box">
          Start date
        </label>

        <input type="date" id="start_date_box" name="query_start_date">
      </div>

      <div>
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="query_end_date">
      </div>

      <div>
        <label for="number_of_teams_box">
          Number of teams
        </label>

        <input type="text" id="number_of_teams_box" name="query_number_of_teams">
      </div>

      <button>
        Create league
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          League
        </th>

        <th>
          League name
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Number of teams
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_leagues.each do |a_league| %>
      <tr>
        <td>
          <%= a_league.id %>
        </td>

        <td>
          <%= a_league.league_name %>
        </td>

        <td>
          <%= a_league.start_date %>
        </td>

        <td>
          <%= a_league.end_date %>
        </td>

        <td>
          <%= a_league.number_of_teams %>
        </td>

        <td>
          <%= time_ago_in_words(a_league.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_league.updated_at) %> ago
        </td>

        <td>
          <a href="/leagues/<%= a_league.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

