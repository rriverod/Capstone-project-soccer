<div>
  <div>
    <h1>
      List of all leagues
    </h1>
  </div>
</div>

<hr>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @list_of_leagues.each do |a_league| %>

    <div class="col">

      <div class="wrapper">
        <div class="card border-secondary shadow p-3 mb-5 bg-body-tertiary rounded" >
          <img src=<%=a_league.image%> class="card-img-top card-img-top-RR" alt="...">
          <div class="card-body">
            <h5 class="card-title text-center fs-3"><%= a_league.league_name %></h5>

            <h6 class="card-text fw-bold">Number of teams: <%= num_teams= Team.where({ :league_id => a_league.id }).count%></h6>
            <h6 class="card-text fw-bold">Start date: <%=a_league.start_date%></h6>
            <h6 class="card-text fw-bold">End date: <%=a_league.end_date%></h6>

            <a href="/leagues/<%=a_league.id%>" class="btn btn-primary ">Show details</a>

          </div>
        </div>
      </div>
    </div>

    <%a_league.update!(
              number_of_teams: num_teams,
              )%>
  <% end %>
</div>

<style>
  .wrapper {
    width: 400px;
    max-width: 100%;
   }

   .card-img-top-RR {
    width: 100%;
    height: 350px;
    object-fit: cover;
  }
</style>
