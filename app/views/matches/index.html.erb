<div>
  <div>
    <h1>
      List of all matches
    </h1>
  </div>
</div>

<hr>

<table class="table table-striped table-hover ">
      <thead >
        <tr >
          <th scope="col">League name</th>
          <th scope="col">Match date</th>
          <th scope="col">Home team</th>
          <th scope="col">Home goals</th>
          <th scope="col">Away goals</th>
          <th scope="col">Away Team</th>
      </tr>
      </thead>
      <tbody class="table-group-divider">
      <% matches = Match.all %>
      <% matches.each do |match| %>

      <tr>
           <td><a class="btn btn-primary" href="/leagues/<%=Team.where({ :id => match.home_team_id }).at(0).league_id%>"><%= name = League.where({:id =>Team.where({ :id => match.home_team_id }).at(0).league_id}).at(0).league_name%></a></td>
           <td><%= match.match_date.strftime('%b %d, %Y') %></td>
           <td><%= home_teams = Team.where({ :id => match.home_team_id }).at(0).team_name%></td>
           <td><%= match.home_score %></td>
           <td><%= match.away_score %></td>
           <td><%= away_teams = Team.where({ :id => match.away_team_id }).at(0).team_name%></td>
      </tr>
      <%end%>
        
        </tbody>
      </table>







<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          League
        </th>

        <th>
          Home team
        </th>

        <th>
          Away team
        </th>

        <th>
          Match date
        </th>

        <th>
          Home score
        </th>

        <th>
          Away score
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_matches.each do |a_match| %>
      <tr>
        <td>
          <%= a_match.id %>
        </td>

        <td>
          <%= a_match.league_id %>
        </td>

        <td>
          <%= a_match.home_team_id %>
        </td>

        <td>
          <%= a_match.away_team_id %>
        </td>

        <td>
          <%= a_match.match_date %>
        </td>

        <td>
          <%= a_match.home_score %>
        </td>

        <td>
          <%= a_match.away_score %>
        </td>

        <td>
          <%= time_ago_in_words(a_match.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_match.updated_at) %> ago
        </td>

        <td>
          <a href="/matches/<%= a_match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
