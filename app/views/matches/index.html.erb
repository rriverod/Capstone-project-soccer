<div>
  <div>
    <h1>
      List of all matches
    </h1>
  </div>
</div>

<hr>

<table class="table table-striped table-hover ">
      <thead >
        <tr >
          <th scope="col">League name</th>
          <th scope="col">Match date</th>
          <th scope="col">Home team</th>
          <th scope="col">Home goals</th>
          <th scope="col">Away goals</th>
          <th scope="col">Away Team</th>
          <th scope="col"></th>
      </tr>
      </thead>
      <tbody class="table-group-divider">
      <% matches = Match.all %>
      <% matches.each do |match| %>

      <tr>
           <td><a class="btn btn-primary" href="/leagues/<%=Team.where({ :id => match.home_team_id }).at(0).league_id%>"><%= name = League.where({:id =>Team.where({ :id => match.home_team_id }).at(0).league_id}).at(0).league_name%></a></td>
           <td><%= match.match_date.strftime('%b %d, %Y') %></td>
           <td><%= home_teams = Team.where({ :id => match.home_team_id }).at(0).team_name%></td>
           <td><%= match.home_score %></td>
           <td><%= match.away_score %></td>
           <td><%= away_teams = Team.where({ :id => match.away_team_id }).at(0).team_name%></td>
           <td><a href="/matches/<%= match.id %>" class="btn btn-primary ">Show details</a></td>
      </tr>
      <%end%>
        
        </tbody>
      </table>
