<div>
  <div>
    <h1>
      List of all teams
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new team
    </h2>

    <form action="/insert_team" method="post">
      <div>
        <label for="team_id_box">
          Team
        </label>

        <input type="text" id="team_id_box" name="query_team_id">
      </div>

      <div>
        <label for="team_name_box">
          Team name
        </label>

        <input type="text" id="team_name_box" name="query_team_name">
      </div>

      <div>
        <label for="number_of_players_box">
          Number of players
        </label>

        <input type="text" id="number_of_players_box" name="query_number_of_players">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <button>
        Create team
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Team
        </th>

        <th>
          Team name
        </th>

        <th>
          Number of players
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_teams.each do |a_team| %>
      <tr>
        <td>
          <%= a_team.id %>
        </td>

        <td>
          <%= a_team.team_id %>
        </td>

        <td>
          <%= a_team.team_name %>
        </td>

        <td>
          <%= a_team.number_of_players %>
        </td>

        <td>
          <%= a_team.position %>
        </td>

        <td>
          <%= time_ago_in_words(a_team.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_team.updated_at) %> ago
        </td>

        <td>
          <a href="/teams/<%= a_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
