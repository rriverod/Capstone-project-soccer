
<%if current_user!=nil%>

<div>
  <div>
    <h2>
      Add a new player
    </h2>

    <form action="/insert_player" method="post">

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="jersey_number_box">
          Jersey number
        </label>

        <input type="text" id="jersey_number_box" name="query_jersey_number">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="team_name_box">
          Team name
        </label>

        <input type="text" id="team_name_box" name="query_team_name">
      </div>

      
      <div>
        <label for="avatar_box">
          Avatar
        </label>

        <input type="text" id="avatar_box" name="query_avatar" value="/img/unknown.jpg" >
      </div>

      <button>
        Create player
      </button>
    </form>
  </div>
</div>

<hr>

<div>
    <h2>
      Delete a player
    </h2>
</div>

    <table class="table table-striped table-hover ">
      <thead >
        <tr >
          <th scope="col">First name</th>
          <th scope="col">Last name</th>
          <th scope="col">Team name</th>
          <th scope="col"></th>
          
  </tr>
      </thead>
      <tbody class="table-group-divider">
       <% players=Player.all %>
        <% players.each do |a_player| %>
          <tr>
            <td><%= a_player.first_name %></td>
            <td><%= a_player.last_name %></td>
            <td><%= team=Team.where({:id=>a_player.team_id}).at(0).team_name %></td>
            <td><a class="align-center btn btn-danger" href="/delete_player/<%= a_player.id %>">Delete player</a></td>
        <%end%>
        
        </tbody>
      </table>

<% else%>
Please <a href="/users/sign_in"> sign in</a> to continue
<%end%>
