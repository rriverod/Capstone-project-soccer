
<div>
  <div>
    <h2>
      Add a new player
    </h2>

    <form action="/insert_player" method="post">
      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="jersey_number_box">
          Jersey number
        </label>

        <input type="text" id="jersey_number_box" name="query_jersey_number">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="team_id_box">
          Team
        </label>

        <input type="text" id="team_id_box" name="query_team_id">
      </div>

      <button>
        Create player
      </button>
    </form>
  </div>
</div>

<hr>

<div>
    <h2>
      Delete a player
    </h2>
</div>

    <table class="table table-striped table-hover ">
      <thead >
        <tr >
          <th scope="col">First name</th>
          <th scope="col">Last name</th>
          <th scope="col">Team ID</th>
          <th scope="col"></th>
          
  </tr>
      </thead>
      <tbody class="table-group-divider">
       <% players=Player.all %>
        <% players.each do |a_player| %>
          <tr>
            <td><%= a_player.first_name %></td>
            <td><%= a_player.last_name %></td>
            <td><%= a_player.team_id %></td>
            <td><a class="align-center btn btn-danger" href="/delete_player/<%= a_player.id %>">Delete player</a></td>
        <%end%>
        
        </tbody>
      </table>
