<div>
  <div>
    <h1>
      Player #<%= @the_player.id %> details
    </h1>

    <div>
      <div>
        <a href="/players">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_player/<%= @the_player.id %>">
          Delete player
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Player
      </dt>
      <dd>
        <%= @the_player.id %>
      </dd>

      <dt>
        First name
      </dt>
      <dd>
        <%= @the_player.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_player.last_name %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @the_player.position %>
      </dd>

      <dt>
        Jersey number
      </dt>
      <dd>
        <%= @the_player.jersey_number %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_player.dob %>
      </dd>

      <dt>
        Team
      </dt>
      <dd>
        <%= @the_player.team_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_player.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_player.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit player
    </h2>

    <form action="/modify_player/<%= @the_player.id %>"  method="post" >
      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id" value="<%= @the_player.player_id %>">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_player.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_player.last_name %>">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position" value="<%= @the_player.position %>">
      </div>

      <div>
        <label for="jersey_number_box">
          Jersey number
        </label>

        <input type="text" id="jersey_number_box" name="query_jersey_number" value="<%= @the_player.jersey_number %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_player.dob %>">
      </div>

      <div>
        <label for="team_id_box">
          Team
        </label>

        <input type="text" id="team_id_box" name="query_team_id" value="<%= @the_player.team_id %>">
      </div>

      <button>
        Update player
      </button>
    </form>
  </div>
</div>

<hr>
